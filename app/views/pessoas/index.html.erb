<p id="notice"><%= notice %></p>

<h1>Listing Pessoas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sexo</th>
      <th>Logradouro</th>
      <th>Numero</th>
      <th>Complemento</th>
      <th>Cep</th>
      <th>Telefone1</th>
      <th>Telefone2</th>
      <th>Cpf cnpj</th>
      <th>Rg</th>
      <th>Datanasc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.sexo %></td>
        <td><%= pessoa.logradouro %></td>
        <td><%= pessoa.numero %></td>
        <td><%= pessoa.complemento %></td>
        <td><%= pessoa.cep %></td>
        <td><%= pessoa.telefone1 %></td>
        <td><%= pessoa.telefone2 %></td>
        <td><%= pessoa.cpf_cnpj %></td>
        <td><%= pessoa.rg %></td>
        <td><%= pessoa.datanasc %></td>
        <td><%= link_to 'Show', pessoa %></td>
        <td><%= link_to 'Edit', edit_pessoa_path(pessoa) %></td>
        <td><%= link_to 'Destroy', pessoa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

